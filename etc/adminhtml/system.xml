<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="gardenlawn" translate="label" sortOrder="100">
            <label>GardenLawn</label>
        </tab>
        <section id="delivery" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Delivery Settings</label>
            <tab>gardenlawn</tab>
            <resource>GardenLawn_Delivery::config</resource>

            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Configuration</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Module Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="warehouse_origin" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Warehouse Origin Address</label>
                    <comment>Default starting point for distance calculation (e.g. "Warsaw, Poland")</comment>
                </field>
            </group>

            <group id="api_provider" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>API Provider</label>
                <field id="provider" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Provider</label>
                    <source_model>GardenLawn\Delivery\Model\Config\Source\Provider</source_model>
                </field>
                <field id="google_maps_api_key" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Google Maps API Key</label>
                    <comment>API Key for Distance Matrix API</comment>
                    <depends>
                        <field id="provider">google</field>
                    </depends>
                </field>
                <field id="here_api_key" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>HERE API Key</label>
                    <comment>API Key for HERE Routing API</comment>
                    <depends>
                        <field id="provider">here</field>
                    </depends>
                </field>
            </group>

            <group id="trans_eu_rules" translate="label" type="text" sortOrder="25" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Trans.eu Vehicle Rules</label>
                <field id="vehicle_rules" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Vehicle Selection Rules</label>
                    <frontend_model>GardenLawn\Delivery\Block\Adminhtml\System\Config\Form\Field\VehicleRules</frontend_model>
                    <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                    <comment>Define rules based on pallets count.</comment>
                </field>
            </group>

            <group id="truck_settings" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Truck Parameters (HERE API)</label>
                <depends>
                    <field id="api_provider/provider">here</field>
                </depends>

                <field id="vehicle_height" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Height (meters)</label>
                    <comment>e.g. 4.0</comment>
                </field>
                <field id="vehicle_width" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Width (meters)</label>
                    <comment>e.g. 2.55</comment>
                </field>
                <field id="vehicle_length" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Length (meters)</label>
                    <comment>e.g. 16.5</comment>
                </field>
                <field id="vehicle_weight" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Gross Weight (kg)</label>
                    <comment>Total weight including cargo, e.g. 40000</comment>
                </field>
                <field id="vehicle_axle_weight" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Weight Per Axle (kg)</label>
                    <comment>e.g. 10000</comment>
                </field>
                <field id="vehicle_axle_count" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Axle Count</label>
                    <comment>e.g. 5</comment>
