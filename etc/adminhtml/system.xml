<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="gardenlawn" translate="label" sortOrder="100">
            <label>GardenLawn</label>
        </tab>
        <section id="delivery" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Delivery Settings</label>
            <tab>gardenlawn</tab>
            <resource>GardenLawn_Delivery::config</resource>

            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Configuration</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Module Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="warehouse_origin" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Warehouse Origin Address</label>
                    <comment>Default starting point for distance calculation (e.g. "Warsaw, Poland")</comment>
                </field>
            </group>

            <group id="api_provider" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>API Provider</label>
                <field id="provider" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Provider</label>
                    <source_model>GardenLawn\Delivery\Model\Config\Source\Provider</source_model>
                </field>
                <field id="google_maps_api_key" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Google Maps API Key</label>
                    <comment>API Key for Distance Matrix API</comment>
                    <depends>
                        <field id="provider">google</field>
                    </depends>
                </field>
                <field id="here_api_key" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>HERE API Key</label>
                    <comment>API Key for HERE Routing API</comment>
                    <depends>
                        <field id="provider">here</field>
                    </depends>
                </field>
            </group>

            <group id="truck_settings" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Truck Parameters (HERE API)</label>
                <depends>
                    <field id="api_provider/provider">here</field>
                </depends>

                <field id="vehicle_height" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Height (meters)</label>
                    <comment>e.g. 4.0</comment>
                </field>
                <field id="vehicle_width" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Width (meters)</label>
                    <comment>e.g. 2.55</comment>
                </field>
                <field id="vehicle_length" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Length (meters)</label>
                    <comment>e.g. 16.5</comment>
                </field>
                <field id="vehicle_weight" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Gross Weight (kg)</label>
                    <comment>Total weight including cargo, e.g. 40000</comment>
                </field>
                <field id="vehicle_axle_weight" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Weight Per Axle (kg)</label>
                    <comment>e.g. 10000</comment>
                </field>
                <field id="vehicle_axle_count" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Axle Count</label>
                    <comment>e.g. 5</comment>
                </field>
                <field id="vehicle_type" translate="label" type="select" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Vehicle Type</label>
                    <source_model>GardenLawn\Delivery\Model\Config\Source\VehicleType</source_model>
                </field>

                <field id="hazardous_goods" translate="label" type="multiselect" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Hazardous Goods</label>
                    <source_model>GardenLawn\Delivery\Model\Config\Source\HazardousGoods</source_model>
                    <can_be_empty>1</can_be_empty>
                </field>

                <field id="avoid_features" translate="label" type="multiselect" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Avoid Features</label>
                    <source_model>GardenLawn\Delivery\Model\Config\Source\AvoidFeatures</source_model>
                    <can_be_empty>1</can_be_empty>
                </field>
            </group>
        </section>

        <section id="carriers" translate="label" sortOrder="320" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Delivery Methods</label>
            <tab>sales</tab>
            <resource>Magento_Shipping::config_shipping</resource>

            <!-- Custom Shipping -->
            <group id="customshipping" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Custom Shipping (External Quotes)</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                </field>
                <field id="name" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Method Name</label>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Sort Order</label>
                </field>
            </group>

            <!-- Custom Free Shipping -->
            <group id="customfreeshipping" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Custom Free Shipping (by SKU)</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                </field>
                <field id="name" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Method Name</label>
                </field>
                <field id="products_sku" translate="label" type="textarea" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Free Shipping Product SKUs</label>
                    <comment>Semicolon-separated list of SKUs that qualify for free shipping (e.g., "sku1;sku2;sku3;")</comment>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Sort Order</label>
                </field>
            </group>

            <!-- Courier Shipping -->
            <group id="couriershipping" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Courier Shipping (Price Table)</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                </field>
                <field id="name" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Method Name</label>
                </field>
                <field id="target_sku" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Target Product SKU</label>
                    <comment>SKU to calculate shipping for (default: trawa-w-rolce)</comment>
                </field>
                <field id="prices_table" translate="label" type="textarea" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Prices Table (JSON)</label>
                    <comment><![CDATA[JSON format: {"delivers":[{"m2":100,"price":50},{"m2":200,"price":90}]}]]></comment>
                </field>
                <field id="price_supplement" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Price Supplement (%)</label>
                    <comment>Additional percentage to add to calculated price (e.g., 10 for 10%)</comment>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Sort Order</label>
                </field>
            </group>

            <!-- Courier with Elevator Shipping -->
            <group id="courierwithelevatorshipping" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Courier with Elevator Shipping (Distance-based)</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                </field>
                <field id="name" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Method Name</label>
                </field>
                <field id="target_sku" translate="label" type="text" sortOrder="35" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Target Product SKU</label>
                    <comment>SKU to calculate shipping for (default: trawa-w-rolce)</comment>
                </field>
                <field id="api_url" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API URL</label>
                    <comment>Google Distance Matrix API URL</comment>
                </field>
                <field id="api_key" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Key</label>
                </field>
                <field id="api_params" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Parameters</label>
                    <comment>Format string for API parameters (e.g., "origins=%s&amp;destinations=%s")</comment>
                </field>
                <field id="origins" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Origin Address</label>
                    <comment>Starting point for distance calculation</comment>
                </field>
                <field id="price" translate="label" type="text" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Price per KM</label>
                </field>
                <field id="factor_min" translate="label" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Factor Min</label>
                    <comment>Minimum load factor</comment>
                </field>
                <field id="factor_max" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Factor Max</label>
                    <comment>Maximum load factor</comment>
                </field>
                <field id="max_load" translate="label" type="text" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Max Load (m2)</label>
                    <comment>Maximum load capacity</comment>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="200" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Sort Order</label>
                </field>
            </group>

            <!-- Distance Shipping -->
            <group id="distanceshipping" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Distance Shipping (Multi-point Route)</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                </field>
                <field id="name" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Method Name</label>
                </field>
                <field id="target_sku" translate="label" type="text" sortOrder="35" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Target Product SKU</label>
                    <comment>SKU to calculate shipping for (default: trawa-w-rolce)</comment>
                </field>
                <field id="api_url" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API URL</label>
                    <comment>Google Distance Matrix API URL</comment>
                </field>
                <field id="api_key" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Key</label>
                </field>
                <field id="api_params" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Parameters</label>
                    <comment>Format string for API parameters</comment>
                </field>
                <field id="origins" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Origin Address</label>
                </field>
                <field id="points" translate="label" type="textarea" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Intermediate Points (JSON)</label>
                    <comment><![CDATA[JSON format: {"points":["Address 1","Address 2"]}]]></comment>
                </field>
                <field id="prices_table" translate="label" type="textarea" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Prices Table (JSON)</label>
                    <comment><![CDATA[JSON format with m2, price, palette, optional full_price]]></comment>
                </field>
                <field id="price_supplement" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Price Supplement (%)</label>
                </field>
                <field id="base_km" translate="label" type="text" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Base KM</label>
                    <comment>Base distance for price calculation</comment>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="200" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Sort Order</label>
                </field>
            </group>
        </section>
    </system>
</config>
