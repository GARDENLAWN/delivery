<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <delivery>
            <general>
                <enabled>1</enabled>
            </general>
            <api_provider>
                <provider>here</provider>
            </api_provider>
            <trans_eu_rules>
                <vehicle_rules>[{"max_pallets":1,"vehicle_size":"1_bus","vehicle_bodies":["9_curtainsider"]},{"max_pallets":8,"vehicle_size":"5_solo","vehicle_bodies":["9_curtainsider"]},{"max_pallets":33,"vehicle_size":"3_lorry","vehicle_bodies":["9_curtainsider"]}]</vehicle_rules>
            </trans_eu_rules>
            <truck_settings>
                <vehicle_height>4.0</vehicle_height>
                <vehicle_width>2.55</vehicle_width>
                <vehicle_length>16.5</vehicle_length>
                <vehicle_weight>40000</vehicle_weight>
                <vehicle_axle_weight>10000</vehicle_axle_weight>
                <vehicle_axle_count>5</vehicle_axle_count>
                <vehicle_type>straightTruck</vehicle_type>
            </truck_settings>
        </delivery>
        <carriers>
            <couriershipping>
                <active>0</active>
                <model>GardenLawn\Delivery\Model\Carrier\CourierShipping</model>
                <title>Courier Shipping</title>
                <name>Courier Delivery</name>
                <description>Standardowa przesyłka kurierska na palecie. Rozładunek windą.</description>
                <target_sku>GARDENLAWNS001</target_sku>
                <prices_table>
                    {
                    "delivers": {
                    "courier": [
                    {"m2":35.0, "price":327.0}
                    ]
                    }
                    }
                </prices_table>
                <price_supplement>0</price_supplement>
                <sort_order>30</sort_order>
            </couriershipping>
            <distanceshipping>
                <active>0</active>
                <model>GardenLawn\Delivery\Model\Carrier\DistanceShipping</model>
                <title>Distance-based Shipping</title>
                <name>Distance-based Delivery</name>
                <description>Transport dedykowany liczony za km.</description>
                <target_sku>GARDENLAWNS001</target_sku>
                <points>
                    {
                    "points": [
                    "ul.Wrocławska 7, 55-020 Rzeplin"
                    ]
                    }
                </points>
                <price_supplement>0</price_supplement>
                <base_km>1</base_km>
                <free_distance_limit>80</free_distance_limit>
                <distance_surcharge>5</distance_surcharge>
                <sort_order>50</sort_order>
            </distanceshipping>

            <!-- New Direct Transport Methods -->
            <direct_no_lift>
                <active>1</active>
                <model>GardenLawn\Delivery\Model\Carrier\DirectNoLift</model>
                <title>Direct Transport (No Lift)</title>
                <name>Direct Transport without Lift</name>
                <description>Transport bezpośredni bez windy. Wymagany rozładunek we własnym zakresie (np. wózek widłowy).</description>
                <target_sku>GARDENLAWNS001</target_sku>
                <specific_origin>ul. Piaskowa 21, Turowo 78-400 Szczecinek, Polska</specific_origin>
                <max_qty>950</max_qty>
                <pricing_config>
                    {
                        "tiers": [
                            {"min_distance": 500, "price": 5, "type": "per_km"},
                            {"min_distance": 300, "price": 7, "type": "per_km"},
                            {"min_distance": 150, "price": 9, "type": "per_km"},
                            {"min_distance": 50, "price": 1500, "type": "fixed"},
                            {"min_distance": 0, "price": 1000, "type": "fixed"}
                        ]
                    }
                </pricing_config>
                <use_transeu_api>0</use_transeu_api>
                <transeu_price_factor>1.2</transeu_price_factor>
                <transeu_vehicle_body>9_curtainsider,8_standard_tent</transeu_vehicle_body>
                <transeu_vehicle_size>14_double_trailer_lorry_solo</transeu_vehicle_size>
                <transeu_freight_type>ftl</transeu_freight_type>
                <transeu_load_type>2_europalette</transeu_load_type>
                <sort_order>60</sort_order>
            </direct_no_lift>

            <direct_lift>
                <active>1</active>
                <model>GardenLawn\Delivery\Model\Carrier\DirectLift</model>
                <title>Direct Transport (With Lift)</title>
                <name>Direct Transport with Lift</name>
                <description>Transport bezpośredni samochodem z windą. Kierowca rozładowuje towar na podłoże utwardzone.</description>
                <target_sku>GARDENLAWNS001</target_sku>
                <specific_origin>ul. Piaskowa 21, Turowo 78-400 Szczecinek, Polska</specific_origin>
                <max_qty>350</max_qty>
                <pricing_config>
                    {
                        "tiers": [
                            {"min_distance": 500, "price": 6, "type": "per_km"},
                            {"min_distance": 300, "price": 8, "type": "per_km"},
                            {"min_distance": 150, "price": 10, "type": "per_km"},
                            {"min_distance": 50, "price": 1600, "type": "fixed"},
                            {"min_distance": 0, "price": 1100, "type": "fixed"}
                        ]
                    }
                </pricing_config>
                <use_transeu_api>0</use_transeu_api>
                <transeu_price_factor>1.2</transeu_price_factor>
                <transeu_vehicle_body>9_curtainsider</transeu_vehicle_body>
                <transeu_vehicle_size>5_solo</transeu_vehicle_size>
                <transeu_freight_type>ltl</transeu_freight_type>
                <transeu_load_type>2_europalette</transeu_load_type>
                <sort_order>70</sort_order>
            </direct_lift>

            <direct_forklift>
                <active>1</active>
                <model>GardenLawn\Delivery\Model\Carrier\DirectForklift</model>
                <title>Direct Transport (With Forklift)</title>
                <name>Direct Transport with Forklift</name>
                <description>Transport bezpośredni z wózkiem widłowym. Rozładunek w dowolnym miejscu na posesji.</description>
                <target_sku>GARDENLAWNS001</target_sku>
                <specific_origin>ul. Piaskowa 21, Turowo 78-400 Szczecinek, Polska</specific_origin>
                <max_qty>800</max_qty>
                <pricing_config>
                    {
                        "tiers": [
                            {"min_distance": 550, "price": 8, "type": "per_km"},
                            {"min_distance": 500, "price": 4400, "type": "fixed"},
                            {"min_distance": 450, "price": 4000, "type": "fixed"},
                            {"min_distance": 400, "price": 3800, "type": "fixed"},
                            {"min_distance": 0, "price": 3600, "type": "fixed"}
                        ]
                    }
                </pricing_config>
                <use_transeu_api>0</use_transeu_api>
                <transeu_price_factor>1.2</transeu_price_factor>
                <transeu_vehicle_body>21_platform</transeu_vehicle_body>
                <transeu_vehicle_size>3_lorry</transeu_vehicle_size>
                <transeu_freight_type>ftl</transeu_freight_type>
                <transeu_load_type>2_europalette</transeu_load_type>
                <sort_order>80</sort_order>
            </direct_forklift>
        </carriers>
    </default>
</config>
