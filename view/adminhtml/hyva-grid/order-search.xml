<?xml version="1.0"?>
<grid xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:hyva:module:Hyva_Admin:etc/hyva-grid.xsd">
    <source>
        <repository>Magento\Sales\Api\OrderRepositoryInterface</repository>
    </source>
    <columns>
        <include>
            <column name="increment_id"/>
            <column name="created_at"/>
            <column name="customer_firstname"/>
            <column name="customer_lastname"/>
        </include>
        <column name="shipping_address" type="text">
            <label>Shipping Address</label>
            <rendererBlock name="GardenLawn_Delivery::grid/renderer/shipping_address.phtml"/>
        </column>
        <column name="actions" type="action">
            <label>Action</label>
            <rendererBlock name="GardenLawn_Delivery::grid/renderer/actions.phtml"/>
        </column>
    </columns>
    <navigation>
        <filters>
            <filter column="increment_id"/>
            <filter column="created_at"/>
            <filter column="customer_lastname"/>
        </filters>
        <pager>
            <defaultPageSize>10</defaultPageSize>
            <pageSizes>10,20,50</pageSizes>
        </pager>
    </navigation>
</grid>
