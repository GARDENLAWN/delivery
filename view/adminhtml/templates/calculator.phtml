<?php
/** @var \Magento\Backend\Block\Template $block */
/** @var \GardenLawn\Delivery\ViewModel\DistanceCalculator $viewModel */
$viewModel = $block->getData('view_model');

if (!$viewModel->isEnabled()) {
    ?>
    <div class="message message-warning error">
        <div><?= $block->escapeHtml(__('Please enable the module in Stores > Configuration > GardenLawn > Delivery Settings.')) ?></div>
    </div>
    <?php
    return;
}

$defaultOrigin = $viewModel->getDefaultOrigin();
?>

<div class="entry-edit" id="distance-calculator-container">
    <form id="distance-calculator-form" method="post">
        <fieldset class="fieldset">
            <legend class="legend"><span><?= $block->escapeHtml(__('Distance Calculation')) ?></span></legend><br>

            <div class="field required">
                <label class="label" for="origin">
                    <span><?= $block->escapeHtml(__('Origin Address')) ?></span>
                </label>
                <div class="control">
                    <input type="text" name="origin" id="origin" value="<?= $block->escapeHtmlAttr($defaultOrigin) ?>" class="input-text" required />
                </div>
            </div>

            <div class="field required">
                <label class="label" for="destination">
                    <span><?= $block->escapeHtml(__('Destination Address')) ?></span>
                </label>
                <div class="control">
                    <input type="text" name="destination" id="destination" class="input-text" required />
                </div>
            </div>

            <div class="field">
                <label class="label">&nbsp;</label>
                <div class="control">
                    <button type="submit" class="action-primary" id="calculate-btn">
                        <span><?= $block->escapeHtml(__('Calculate Distance')) ?></span>
                    </button>
                </div>
            </div>

        </fieldset>
    </form>

    <div id="calculator-result" class="message message-success success" style="display: none; margin-top: 20px;">
        <div>
            <strong><?= $block->escapeHtml(__('Distance: ')) ?><span id="result-distance"></span></strong>
            <br/>
            <?= $block->escapeHtml(__('Duration: ')) ?><span id="result-duration"></span>
            <br/><br/>
            <strong><?= $block->escapeHtml(__('API Response:')) ?></strong>
            <pre id="result-json" style="background: #f5f5f5; padding: 10px; border: 1px solid #ccc; margin-top: 5px; overflow-x: auto;"></pre>
        </div>
    </div>

    <div id="calculator-error" class="message message-error error" style="display: none; margin-top: 20px;">
        <div id="error-message"></div>
    </div>
</div>

<script>
    require(['jquery', 'mage/url'], function($, urlBuilder) {
        $(document).ready(function() {
            $('#distance-calculator-form').on('submit', function(e) {
                e.preventDefault();

                var origin = $('#origin').val();
                var destination = $('#destination').val();
                var $btn = $('#calculate-btn');
                var $result = $('#calculator-result');
                var $error = $('#calculator-error');

                $btn.prop('disabled', true).text('<?= $block->escapeJs(__('Calculating...')) ?>');
                $result.hide();
                $error.hide();

                $.ajax({
                    url: '<?= $block->getUrl('gardenlawn_delivery/calculator/calculate') ?>',
                    type: 'POST',
                    data: {
                        origin: origin,
                        destination: destination,
                        form_key: window.FORM_KEY
                    },
                    dataType: 'json',
                    success: function(response) {
                        if (response.success) {
                            $('#result-distance').text(response.distance);
                            $('#result-duration').text(response.duration);
                            $('#result-json').text(response.raw_json);
                            $result.show();
                        } else {
                            $('#error-message').text(response.message);
                            $error.show();
                        }
                    },
                    error: function() {
                        $('#error-message').text('<?= $block->escapeJs(__('An error occurred while processing your request.')) ?>');
                        $error.show();
                    },
                    complete: function() {
                        $btn.prop('disabled', false).html('<span><?= $block->escapeJs(__('Calculate Distance')) ?></span>');
                    }
                });
            });
        });
    });
</script>
