<script>
    require(['jquery', 'mage/url', 'Magento_Catalog/js/price-utils'], function($, urlBuilder, priceUtils) {
        $(document).ready(function() {
            // --- Calculator Logic ---
            $('#distance-calculator-form').on('submit', function(e) {
                e.preventDefault();

                var origin = $('#origin').val();
                var destination = $('#destination').val();
                var quantity = parseFloat($('#quantity').val());
                var $btn = $('#calculate-btn');
                var $result = $('#calculator-result');
                var $error = $('#calculator-error');
                var $errorJsonContainer = $('#error-json-container');

                $btn.prop('disabled', true).text('<?= $block->escapeJs(__('Calculating...')) ?>');
                $result.hide();
                $error.hide();
                $errorJsonContainer.hide();

                $.ajax({
                    url: '<?= $block->getUrl('gardenlawn_delivery/calculator/calculate') ?>',
                    type: 'POST',
                    data: {
                        origin: origin,
                        destination: destination,
                        quantity: quantity,
                        form_key: window.FORM_KEY
                    },
                    dataType: 'json',
                    success: function(response) {
                        if (response.success) {
                            $('#result-distance').text(response.distance);
                            $('#result-duration').text(response.duration);
                            $('#result-departure').text(response.departure_time);
                            $('#result-arrival').text(response.arrival_time);
                            $('#result-json').text(response.raw_json);

                            if (response.shipping_costs && response.shipping_costs.length > 0) {
                                var $tbody = $('#shipping-costs-body');
                                $tbody.empty();
                                $.each(response.shipping_costs, function(i, cost) {
                                    var $tr = $('<tr>');
                                    var methodText = cost.method;
                                    if (cost.distance) {
                                        methodText += ' <span style="font-size: 0.85em; color: #666;">(' + cost.distance + ')</span>';
                                    }
                                    if (cost.description) {
                                        methodText += '<br><span style="font-size: 0.85em; color: #666; font-style: italic;">' + cost.description + '</span>';
                                    }
                                    $('<td>').html(methodText).appendTo($tr);
                                    $('<td>').css('font-weight', 'bold').text(cost.price).appendTo($tr);

                                    // Calculate price per m2 (delivery cost only)
                                    var pricePerM2 = '-';
                                    if (cost.raw_price && quantity > 0) {
                                        var val = cost.raw_price / quantity;
                                        pricePerM2 = priceUtils.formatPrice(val, {}, true);
                                    }

                                    $('<td>').text(pricePerM2).appendTo($tr);

                                    $tbody.append($tr);
                                });
                                $('#result-shipping-costs').show();
                            } else {
                                $('#result-shipping-costs').hide();
                            }

                            $result.show();
                        } else {
                            $('#error-message').text(response.message);
                            if (response.raw_json) {
                                $('#error-json').text(response.raw_json);
                                $errorJsonContainer.show();
                            }
                            $error.show();
                        }
                    },
                    error: function() {
                        $('#error-message').text('<?= $block->escapeJs(__('An error occurred while processing your request.')) ?>');
                        $error.show();
                    },
                    complete: function() {
                        $btn.prop('disabled', false).html('<span><?= $block->escapeJs(__('Calculate Distance')) ?></span>');
                    }
                });
            });

            // ... (rest of the script) ...
            // --- Example Address Dropdown Logic ---
            $('#example-address-select').on('change', function() {
                var address = $(this).val();
                if (address) {
                    $('#destination').val(address);
                    $('#destination').css('background-color', '#e8f0fe');
                    setTimeout(function() {
                        $('#destination').css('background-color', '');
                    }, 500);
                }
            });

            // --- Order Search Logic ---
            function searchOrders() {
                var query = $('#order-search').val();
                $('#search-loading').show();
                $('#orders-grid').hide();
                $('#no-orders-found').hide();
                $('#orders-table-body').empty();

                $.ajax({
                    url: '<?= $block->getUrl('gardenlawn_delivery/calculator/searchOrders') ?>',
                    type: 'GET',
                    data: { query: query },
                    dataType: 'json',
                    success: function(response) {
                        if (response.success && response.orders.length > 0) {
                            $.each(response.orders, function(index, order) {
                                var $tr = $('<tr>');
                                $('<td>').text(order.increment_id).appendTo($tr);
                                $('<td>').text(order.customer_name).appendTo($tr);
                                $('<td>').addClass('col-address').css('font-size', '0.9em').text(order.shipping_address).appendTo($tr);

                                var $btnTd = $('<td>');
                                $('<button>', {
                                    type: 'button',
                                    'class': 'action-default use-address-btn',
                                    'data-address': order.shipping_address,
                                    text: '<?= $block->escapeJs(__('Use')) ?>'
                                }).appendTo($btnTd);
                                $btnTd.appendTo($tr);

                                $('#orders-table-body').append($tr);
                            });
                            $('#orders-grid').show();
                        } else {
                            $('#no-orders-found').show();
                        }
                    },
                    error: function() {
                        alert('<?= $block->escapeJs(__('Error searching orders.')) ?>');
                    },
                    complete: function() {
                        $('#search-loading').hide();
                    }
                });
            }

            $('#search-btn').on('click', function() {
                searchOrders();
            });

            $('#order-search').on('keypress', function(e) {
                if (e.which == 13) {
                    e.preventDefault();
                    searchOrders();
                }
            });

            $(document).on('click', '.use-address-btn', function() {
                var address = $(this).data('address');
                $('#destination').val(address);
                $('#destination').css('background-color', '#e8f0fe');
                setTimeout(function() {
                    $('#destination').css('background-color', '');
                }, 500);
            });

            searchOrders();
        });
    });
</script>
